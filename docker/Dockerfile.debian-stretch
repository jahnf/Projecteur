# Container for building the Projecteur package 
# Images available at: https://hub.docker.com/r/jahnf/projecteur/tags

FROM debian:stretch

RUN apt-get update
RUN apt-get install -y --no-install-recommends \
  ca-certificates \
	g++ \
	make \
	cmake \
	git \
	pkg-config \
	udev \
	qtdeclarative5-dev \
	libqt5x11extras5-dev

